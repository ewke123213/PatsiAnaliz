<%- layout('layout') %>

<div class="container" style="max-width: 800px; margin-top: 50px; background-color: #2a2a2a; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
    <h2 style="text-align: center; color: #4CAF50;">Yeni Gönderi Ekle</h2>
    <form action="/admin/new-post" method="POST">
        <div class="form-group">
            <label for="title">Başlık:</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div class="form-group">
            <label for="thumbnailUrl">Küçük Resim URL'si:</label>
            <input type="text" id="thumbnailUrl" name="thumbnailUrl" placeholder="e.g., /images/post1-thumb.jpg" required>
        </div>
        <div class="form-group">
            <label for="accessCode">Erişim Kodu:</label>
            <input type="text" id="accessCode" name="accessCode" required>
        </div>
        <div class="form-group">
            <label for="content">İçerik (HTML destekler):</label>
            <textarea id="content" name="content" rows="10"></textarea>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn">Gönderiyi Kaydet</button>
            <a href="/admin/dashboard" class="btn" style="background-color: #6c757d;">İptal</a>
        </div>
    </form>
</div>