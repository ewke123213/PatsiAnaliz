<%- layout('layout') %>

<div class="container" style="max-width: 400px; margin-top: 50px; background-color: #2a2a2a; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
    <h2 style="text-align: center; color: #4CAF50;">Admin Girişi</h2>
    <% if (message) { %>
        <p style="color: red; text-align: center;"><%= message %></p>
    <% } %>
    <form action="/admin/login" method="POST">
        <div class="form-group">
            <label for="username">Kullanıcı Adı:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Şifre:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn" style="width: 100%;">Giriş Yap</button>
    </form>
</div>